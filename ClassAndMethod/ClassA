package sec03.LoginSystem;
import java.util.Scanner;
public class ClassA {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		ClassB a = new ClassB();
		while (true) {
			System.out.println("1, 2, 4, 5, 7, 8, 9, 10 중 하나를 입력하시오.");
			int submit = sc.nextInt();
			if (submit == 1) {
				System.out.println("1. 정수형변수 a와 b를 선언해서 더한 후 c에 저장한 뒤 출력");
				int boatA = sc.nextInt();
				int boatB = sc.nextInt();
				a.boat(boatA, boatB);
			} else if (submit == 2) {
				System.out.println("2. 정수형변수 a와 b를 선언한 뒤 둘 중 어느 것이 더 큰 지 비교하기");
				int comparisonA = sc.nextInt();
				int comparisonB = sc.nextInt();
				a.comparison(comparisonA, comparisonB);
			} else if (submit == 4) {
				System.out.println("4. 입력받은 값 3개를 출력하게끔 만드시오.");
				int submitA = sc.nextInt();
				int submitB = sc.nextInt();
				int submitC = sc.nextInt();
				a.submit(submitA, submitB, submitC);
			} else if (submit == 5) {
				System.out.println("5. 입력받은 두 수를 더한 뒤 변수 a에 저장하여 출력하시오");
				int saveA = sc.nextInt();
				int saveB = sc.nextInt();
				a.save(saveA, saveB);
			} else if (submit == 6) {
				System.out.println("5. 입력받은 두 수를 더한 뒤 변수 a에 저장하여 출력하시오");
				int saveA = sc.nextInt();
				int saveB = sc.nextInt();
				a.save(saveA, saveB);
			} else if (submit == 7) {
				System.out.println("7. 1부터 10까지의 합을 구하시오");
				System.out.println(a.tenBout(0));
			} else if (submit == 8) {
				System.out.println("8. 1부터 100까지 짝수를 구하고, 짝수중에 5의배수의 합을 구하시오");
				System.out.println(a.evenAndFive(0));
			} else if (submit == 9) {
				System.out.println("9. 정수형배열을 선언한 뒤 배열의 길이전체를 더한 후 출력하시오.");
				int arrayLength = sc.nextInt();
				a.arrayLength(arrayLength, 0);
				System.out.println(a.arrayLength(arrayLength, 0));
			} else if (submit == 10) {
				System.out.println("10. 정수형 배열 a를 선언한다. 반복문을 이용하여 a에 1~100까지 저장시킨다. 그리고 배열의 0번째인덱스부터 99번째 인덱스까지의 합을 출력하라.");
				System.out.println(a.sum(0));
			}         	
		}
	}
}
